<div class="center jumbotron">
  <h1>Hello <%= @user.username %>!</h1>
  This is your user page. You current have <strong><%= if @user.reputation then @user.reputation else 0 end %> reputation</strong>. 
  <br>
  <%= link_to "View your comments.", comments_user_path(@user), class: "btn btn-primary" %>
  
  <% if !@restaurants.empty? %>
    <h2>Here is some info for the restaurants that you have posted about.</h2>

    <%= form_tag restaurants_path, :method => 'get', :id => "restaurant_search" do %>
      <p>
        <%= text_field_tag :search, params[:search], placeholder: "Enter a restaurant..." %>
        <%= submit_tag "Search", { :name => nil, class: "btn btn-primary" } %>
    <% end %>
        <div id="restaurants"><%= render "restaurant_list" %></div>
  <% else %>
    <h2>Doesn't look like you have any restaurants. <%= link_to "Post some!", new_restaurant_path %></h2>
  <% end %>
</div>


