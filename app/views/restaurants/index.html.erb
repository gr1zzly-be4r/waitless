<div class="center jumbotron"> 
  <h1>Current wait times</h1>
  <%= form_tag restaurants_path, :method => 'get', :id => "restaurant_search" do %>
    <p>
    <%= text_field_tag :search, params[:search], :placeholder => "Enter a restaurant..." %>
      <%= submit_tag "Search", { :name => nil, class: "btn btn-primary" } %>
  <% end %>
  <div id="restaurants"><%= render "restaurant_list" %></div>
  <br>
  <% if logged_in? %>
    <%= link_to "Make a new restaurant", new_restaurant_path, class: "btn btn-lg btn-primary" %>
  <% else %>
    <%= link_to "You must be logged in to post a wait time", login_path, class: "btn btn-lg btn-primary" %>
  <% end %>
</div>
